                     <cell role="data">145</cell>
                     <cell role="label">regels =</cell>
                     <cell role="data">725</cell>
                     <cell role="label">Regels</cell>
                  </row>
                  <row role="data">
                     <cell role="label">" "</cell>
                     <cell role="data">2e</cell>
                     <cell role="label">"</cell>
                     <cell role="data">5</cell>
                     <cell role="label">"</cell>
